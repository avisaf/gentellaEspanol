{% extends 'admin/bars.html.twig' %}

{% block contenpage %}
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h5><a href="{{ path('app_usuarios.index') }}">Lista usuarios</a> >> editar usuario </h5>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Editar usuario {{ usuario.nombreCompleto | upper }}</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li><a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>

                        {{ form_start(form) }}

                            <div class="col-md-6">
                                {{ form_row(form.username) }}
                                <div  class="col-md-6">
                                {{ form_row(form.apellidoPaterno) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.apellidoMaterno) }}
                                </div>
                                {{ form_row(form.nombres) }}

                            </div>
                            <div class="col-md-6">
                                <div  class="col-md-6">
                                    {{ form_row(form.tipoDocumento) }}
                                    {{ form_row(form.documento) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.sexo) }}
                                    {{ form_row(form.fechaNacimiento) }}
                                </div>
                                {{ form_row(form.rol) }}

                            </div>

                    <div class="x_content">


                        <div class="ln_solid"></div>
                        <div class="item form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <a class="btn btn-warning" href="{{ path('app_usuarios.index') }}">Cancelar</a>
                                <button type="submit" name="valider" class="btn btn-success">Editar</button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts_footer %}
	{{ parent() }}

{% endblock %}